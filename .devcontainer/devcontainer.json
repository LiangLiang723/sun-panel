{
  "name": "Sun-Panel Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [3002],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "bradlc.vscode-tailwindcss",
        "vue.volar",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": [
    // VS Code 已自动挂载工作区到 /workspaces/sun-panel
    "source=sun-panel-node-modules,target=/workspaces/sun-panel/node_modules,type=volume",
    "source=go-modules,target=/go/pkg/mod,type=volume"
  ],
  "workspaceFolder": "/workspaces/sun-panel",
  "remoteUser": "root",
  "postCreateCommand": "cd ${containerWorkspaceFolder} && pnpm install && cd service && go mod download"
}
